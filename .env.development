# Uygulama Ortamı Ayarları
NODE_ENV='development'                    # Çalışma ortamı: development, production veya test olabilir.
PROJECT_NAME='firmora'                  # Proje adı.
EXPRESS_PORT='3010'                       # Express sunucusunun çalışacağı port.
DEFAULT_LANGUAGE='tr'                   # Varsayılan dil ayarı

# Rate Limiting Konfigürasyonu (Hız Sınırlama)
RATE_LIMIT_WINDOW_MINUTES=10
RATE_LIMIT_MAX_REQUESTS=300

# Strict Rate Limiting Konfigürasyonu (Hassas İşlemler için)
STRICT_RATE_LIMIT_WINDOW_MINUTES=15    # Strict rate limit zaman penceresi (dakika)
STRICT_RATE_LIMIT_MAX_REQUESTS=5       # Strict rate limit maksimum istek sayısı

# JWT Ayarları
JWT_SECRET_KEY='firmora-jwt-secret-key' # JSON Web Token (JWT) için kullanılan gizli anahtar.
TOKEN_LIFETIME='1h'                       # Standart oturum süresi (örneğin: 1 saat).
REMEMBER_ME_TOKEN_LIFETIME='7d'           # 'Beni Hatırla' özelliği için oturum süresi (örneğin: 7 gün).
EMAIL_VERIFICATION_TOKEN_LIFETIME='10m' # E-posta doğrulama token süresi (örneğin: 10 dakika).
EMAIL_CHANGE_TOKEN_LIFETIME='24h'      # E-posta değiştirme token süresi (örneğin: 24 saat).
PASSWORD_RESET_TOKEN_LIFETIME='10m'     # Şifre sıfırlama token süresi (örneğin: 10 dakika).
PHONE_VERIFICATION_TOKEN_LIFETIME='3m' # Telefon doğrulama kodu süresi (örneğin: 15 dakika).

# Veritabanı Ayarları
DB_HOST='localhost'                       # Veritabanı sunucusunun adresi (örneğin: localhost).
DB_USER='fthgncl'                         # Veritabanı kullanıcı adı.
DB_PASSWORD='1'                           # Veritabanı şifresi.
DB_NAME='firmora_development'           # Kullanılacak veritabanının adı.
DB_PORT='3306'                            # Veritabanı portu (MySQL için genelde 3306).

# Backup (Yedekleme) Ayarları
BACKUP_RETENTION_DAYS='30'          # Yedek dosyalarının kaç gün saklanacağı (30 gün önerilir).
BACKUP_CRON_EXPRESSION='0 3 * * *'  # Yedekleme zamanlaması (her gece saat 03:00). Format: dakika saat gün ay haftanınGünü
BACKUP_TIMEZONE='Europe/Istanbul'   # Yedekleme için kullanılacak saat dilimi (Türkiye saati).